<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tertuliacreation.MonthlywActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mwa_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mwa_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/mwa_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mwa_weekdayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="80dp"
                android:labelFor="@+id/mwa_weekday"
                android:singleLine="true"
                android:text="@string/new_monthlyw_weekday_label" />

            <EditText
                android:id="@+id/mwa_weekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:hint="@string/new_monthlyw_weekday_hint"
                android:imeOptions="actionNext"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mwa_weeknrLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:labelFor="@+id/mwa_weeknr"
                android:singleLine="true"
                android:text="@string/new_monthlyw_weeknr_label" />

            <EditText
                android:id="@+id/mwa_weeknr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_monthlyw_weeknr_hint"
                android:imeOptions="actionNext"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mwa_fromstartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:labelFor="@+id/mwa_fromstart"
                android:singleLine="true"
                android:text="@string/new_monthlyw_fromstart_label" />

            <EditText
                android:id="@+id/mwa_fromstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_monthlyw_fromstart_hint"
                android:imeOptions="actionNext"
                android:singleLine="true" />

            <TextView
                android:id="@+id/mwa_skipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:labelFor="@+id/mwa_skip"
                android:singleLine="true"
                android:text="@string/new_monthlyw_skip_label" />

            <EditText
                android:id="@+id/mwa_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_monthlyw_skip_hint"
                android:imeOptions="actionDone"
                android:singleLine="true" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mwa_createButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickCreateLocation"
            android:text="@string/new_monthlyw_submit_button" />

        <Button
            android:id="@+id/mwa_cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickCancel"
            android:text="@string/new_monthlyw_cancel_button" />

    </LinearLayout>

</FrameLayout>
