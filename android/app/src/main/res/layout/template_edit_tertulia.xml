<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/template_appbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <!-- ApiTertulia Title -->

            <TextView
                android:id="@+id/tertuliaNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/tertuliaName"
                android:singleLine="true"
                android:text="@string/new_tertulia_name_label" />

            <EditText
                android:id="@+id/tertuliaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_tertulia_title_hint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:singleLine="true" />

            <!-- ApiTertulia Subject -->

            <TextView
                android:id="@+id/subjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/tr_subject"
                android:singleLine="true"
                android:text="@string/new_tertulia_subject_label" />

            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_tertulia_subject_hint"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:singleLine="true" />

            <!-- ApiTertulia Privacy -->

            <TextView
                android:id="@+id/isPrivateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/tr_isPrivate"
                android:singleLine="true"
                android:text="@string/new_tertulia_privacy_label" />

            <CheckBox
                android:id="@+id/isPrivate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="6sp"
                android:checked="true"
                android:hint="@string/new_tertulia_privacy_hint"
                android:textSize="18sp" />

            <!-- ApiTertulia Location -->

            <LinearLayout
                android:id="@+id/locationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ApiTertulia Location Name -->

                <TextView
                    android:id="@+id/locationNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/locationName"
                    android:singleLine="true"
                    android:text="@string/new_tertulia_location_name_label" />

                <EditText
                    android:id="@+id/locationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_tertulia_location_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true" />


                <!-- ApiTertulia Location Address -->

                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/lo_address"
                    android:singleLine="true"
                    android:text="@string/new_tertulia_location_address_label" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_tertulia_location_address_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:singleLine="true" />


                <!-- ApiTertulia Location Zip & Country -->

                <TextView
                    android:id="@+id/zipCityCountryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/zipCityCountryLayout"
                    android:singleLine="true"
                    android:text="@string/new_tertulia_location_zipcountry_label" />

                <LinearLayout
                    android:id="@+id/zipCityCountryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/zip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/new_tertulia_location_zip_hint"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/new_tertulia_location_city_hint"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/new_tertulia_location_country_hint"
                        android:imeOptions="actionNext"
                        android:inputType="textCapCharacters"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- ApiTertulia Location Lat & Lon -->

                <TextView
                    android:id="@+id/latitudeLongitudeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/latitudeLongitudeLayout"
                    android:singleLine="true"
                    android:text="@string/new_tertulia_location_coordinates_label" />

                <LinearLayout
                    android:id="@+id/latitudeLongitudeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_tertulia_location_coordinates_hint"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal|numberSigned"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/new_tertulia_location_coordinates_hint"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal|numberSigned"
                        android:singleLine="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- ApiTertulia Schedule -->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:onClick="onClickSelectSchedule"
                android:text="@string/new_tertulia_schedule_button_label" />

            <TextView
                android:id="@+id/scheduleDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/new_tertulia_schedule_label"
                android:labelFor="@+id/scheduleDescription"
                android:singleLine="true" />

            <TextView
                android:id="@+id/scheduleDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:layout_marginStart="5sp"
                android:layout_marginTop="6sp"
                android:hint="@string/new_tertulia_schedule_hint"
                android:singleLine="false"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_anchor="@id/titleLayout"
        app:layout_anchorGravity="center|bottom" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mapLookupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:onClick="onClickMapLookup"
        android:src="@android:drawable/ic_dialog_map"
        android:tint="#FFFFFF"
        app:backgroundTint="#006600"
        app:fabSize="mini"
        app:layout_anchor="@id/locationName"
        app:layout_anchorGravity="center_vertical|end"
        app:layout_behavior=".FabScrollBehavior"
        app:layout_collapseMode="parallax" />

</merge>