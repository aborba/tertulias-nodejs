<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tertuliacreation.ScheduleMonthlyWActivity">

    <include layout="@layout/template_appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ma_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ma_dayLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/ma_day"
                android:singleLine="true"
                android:text="@string/new_monthly_day_label" />

            <EditText
                android:id="@+id/ma_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_monthly_day_hint"
                android:inputType="number"
                android:singleLine="true" />

            <TextView
                android:id="@+id/ma_fromendLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/ma_fromend"
                android:singleLine="true"
                android:text="@string/new_monthly_fromend_label" />

            <ToggleButton
                android:id="@+id/ma_fromend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />

            <TextView
                android:id="@+id/ma_skipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/ma_skip"
                android:singleLine="true"
                android:text="@string/new_monthlyw_skip_label" />

            <Spinner
                android:id="@+id/ma_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ma_createButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickCreateSchedule"
            android:text="@string/new_monthlyw_submit_button" />

        <Button
            android:id="@+id/ma_cancelButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickCancel"
            android:text="@string/new_monthlyw_cancel_button" />

    </LinearLayout>

</FrameLayout>
