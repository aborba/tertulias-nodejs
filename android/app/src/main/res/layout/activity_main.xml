<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/mtl_appbar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mtl_collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/mtl_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/tertulias_app"
                app:layout_collapseMode="none" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/mtl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/mtl_user_picture"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:paddingRight="44dp"
        app:layout_anchor="@id/mtl_appbar"
        app:layout_anchorGravity="top|right|end" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mtl_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:scrollbars="vertical"
            app:layout_scrollFlags="scroll" />

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mtl_newTertuliaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="128dp"
        android:onClick="onClickNewTertulia"
        android:src="@android:drawable/ic_input_add"
        android:tint="#FFFFFF"
        app:backgroundTint="#ff0000"
        app:fabSize="normal"
        app:layout_behavior=".FabScrollBehavior"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|snap" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mtl_searchTertuliaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginStart="128dp"
        android:onClick="onClickSearchTertulia"
        android:src="@android:drawable/ic_search_category_default"
        android:tint="#FFFFFF"
        app:backgroundTint="#006600"
        app:fabSize="normal"
        app:layout_behavior=".FabScrollBehavior"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|snap" />

    <ImageView
        android:id="@+id/mtl_authenticatedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9sp"
        android:layout_marginStart="5sp"
        android:src="@drawable/ic_verified_user_black_24dp"
        android:visibility="invisible" />

</android.support.design.widget.CoordinatorLayout>