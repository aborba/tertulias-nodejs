<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.isel.s1516v.ps.apiaccess">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TertuliasApplication"
        android:allowBackup="true"
        android:icon="@mipmap/tertulias"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_activity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTertuliaActivity"
            android:label="@string/title_activity_new_tertulia" />
        <activity
            android:name=".TertuliaDetailsActivity"
            android:label="@string/title_activity_new_tertulia"
            android:parentActivityName=".NewTertuliaActivity" />
        <activity
            android:name=".NewLocationActivity"
            android:label="@string/title_activity_new_location"
            android:parentActivityName=".NewTertuliaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.isel.s1516v.ps.apiaccess.NewTertuliaActivity" />
        </activity>
        <activity android:name=".EditUserProfileActivity" />
        <activity android:name=".MonthlywActivity" />
        <activity android:name=".SubscribeTeruliaActivity"></activity>
    </application>

</manifest>