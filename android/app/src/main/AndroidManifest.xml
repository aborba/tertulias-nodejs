<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.isel.s1516v.ps.apiaccess">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TertuliasApplication"
        android:allowBackup="true"
        android:icon="@mipmap/tertulias"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_activity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tertuliacreation.NewTertuliaActivity"
            android:label="@string/title_activity_new_tertulia" />

        <activity
            android:name=".TertuliaDetailsActivity"
            android:label="@string/title_activity_new_tertulia"
            android:parentActivityName=".tertuliacreation.NewTertuliaActivity" />

        <activity
            android:name=".NewLocationActivity"
            android:label="@string/title_activity_new_location"
            android:parentActivityName=".tertuliacreation.NewTertuliaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".tertuliacreation.NewTertuliaActivity" />
        </activity>

        <activity android:name=".EditUserProfileActivity" />

        <activity android:name=".tertuliacreation.MonthlywActivity" />

        <activity
            android:name=".tertuliasubscription.SearchPublicTertuliaActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".tertuliasubscription.PublicTertuliaDetailsActivity"
            android:label="@string/title_activity_public_tertulia_details"
            android:parentActivityName=".tertuliasubscription.PublicTertuliaDetailsActivity" />

        <activity android:name=".InvitationActivity"></activity>
    </application>

</manifest>